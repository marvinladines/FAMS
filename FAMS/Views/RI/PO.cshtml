                                            </tr>
                                            <tr>
                                                <td>0002</td>
                                                <td>5</td>
                                                <td>456</td>
                                                <td>Sample Data Only 2</td>
                                                <td>3,400.00</td>
                                                <td>5</td>
                                            </tr>
                                            <tr>
                                                <td>0003</td>
                                                <td>1</td>
                                                <td>789</td>
                                                <td>Sample Data Only 3</td>
                                                <td>400.00</td>
                                                <td>1</td>
                                            </tr>
                                        </tbody>
                                    </table>
                                </div>
                            </div>
                            <div class="text-right">
                                <button class="btn btn-danger btn-rounded btn-sm"><i class="fa fa-minus-square"></i> Remove from List </button>
                                <button class="btn btn-primary btn-sm">
                                    <i class="fa fa-check-square"></i>
                                    &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
                                    Add to List
                                    &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
                                </button>
                            </div>
                        </div>
                    </div>
                    <!--END TAB-->

                    <!--3rd TAB-->
                    <div id="tab-3" class="tab-pane">
                        <div class="panel-body">
                            <div class="row">
                                <div class="col-lg-12">
                                    <table class="table table-bordered" id="tblPO_TC">
                                        <thead>
                                            <tr>
                                                <th>Sequence</th>
                                                <th>Terms and Conditions</th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            <tr>
                                                <td>3</td>
                                                <td>Sample terms and conditions.</td>
                                            </tr>
                                            <tr>
                                                <td>2</td>
                                                <td>Another sample terms and conditions.</td>
                                            </tr>
                                        </tbody>
                                    </table>
                                </div>
                            </div>

                        </div>
                    </div>
                    <!--END TAB-->

                    <!--4th TAB-->
                    <div id="tab-4" class="tab-pane">
                        <div class="panel-body">
                            <div class="row">
                                <div class="col-sm-4 row-top">
                                    <div class="form-group">
                                        <label class="col-form-label required">Operations Accounting</label>
                                        <select class="form-control">
                                            <option selected></option>
                                            <option value="OA1">OA 1</option>
                                            <option value="OA2">OA 2</option>
                                            <option value="OA3">OA 3</option>
                                        </select>
                                    </div>
                                </div>
                                <div class="col-sm-4 marg_top">
                                    <div class="form-group row-top">
                                        <label class="col-form-labe required">Operations Accounting Signing Date</label>
                                        <div class="input-group date">
                                            <span class="input-group-addon"><i class="fa fa-calendar"></i></span><input id="PO_OASD" type="text" class="form-control" autocomplete="off">
                                        </div>
                                    </div>
                                </div>
                                <div class="col-sm-4 marg_top">
                                    <div class="form-group row-top">
                                        <label class="col-form-labe required">Recommending Officer</label>
                                        <select class="form-control">
                                            <option selected></option>
                                            <option value="RO1">RO 1</option>
                                            <option value="RO2">RO 2</option>
                                            <option value="RO3">RO 3</option>
                                        </select>
                                    </div>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-sm-4 marg_top">
                                    <div class="form-group row-top">
                                        <label class="col-form-labe required">Recommending Officer Signing Date</label>
                                        <div class="input-group date">
                                            <span class="input-group-addon"><i class="fa fa-calendar"></i></span><input id="PO_ROSD" type="text" class="form-control" autocomplete="off">
                                        </div>
                                    </div>
                                </div>
                                <div class="col-sm-4 marg_top">
                                    <div class="form-group row-top">
                                        <label class="col-form-labe required">Approving Officer</label>
                                        <select class="form-control">
                                            <option selected></option>
                                            <option value="AO1">AO 1</option>
                                            <option value="AO2">AO 2</option>
                                            <option value="AO3">AO 3</option>
                                        </select>
                                    </div>
                                </div>
                                <div class="col-sm-4 marg_top">
                                    <div class="form-group row-top">
                                        <label class="col-form-labe required">Approving Officer Signing Date</label>
                                        <div class="input-group date">
                                            <span class="input-group-addon"><i class="fa fa-calendar"></i></span><input id="PO_AOSD" type="text" class="form-control" autocomplete="off">
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <footer>
                    <div class="panel-body panel-footer">
                        <div class="text-right" style="margin-top: -12px;">
                            <button class="btn btn-danger dim btn-outline btn-sm"><i class="fa fa-mail-reply"></i>
                                &nbsp;&nbsp;&nbsp;
                                Return
                                &nbsp;&nbsp;&nbsp;
                            </button>
                            <button class="btn btn-primary dim btn-outline btn-sm"><i class="fa fa-folder"></i>
                                &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
                                Save
                                &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
                            </button>
                        </div>
                    </div>
                </footer>
            </div>

        </div>
    </div>
 </div>

@section Styles {
    @Styles.Render("~/Content/plugins/dataTables/dataTablesStyles")
    @Styles.Render("~/plugins/dataPickerStyles")
    @Styles.Render("~/Content/plugins/chosen/chosenStyles")
    @*@Styles.Render("~/plugins/select2Styles")*@
}
@section Scripts {
    @Scripts.Render("~/plugins/dataTables")
    @Scripts.Render("~/plugins/dataPicker")
    @Scripts.Render("~/plugins/chosen")
    @*@Scripts.Render("~/plugins/select2")*@
}

@Scripts.Render("~/Scripts/jquery-3.1.1.min.js")
<script type="text/javascript">
    $(document).ready(function () {
        $('#PO_Date').datepicker({ autoclose: true });
        $('#PO_OASD').datepicker({ autoclose: true });
        $('#PO_ROSD').datepicker({ autoclose: true });
        $('#PO_AOSD').datepicker({ autoclose: true });
        $(".chosen-select").chosen();

        $('#tblPO_IL').DataTable({
            pageLength: 10,
            lengthChange: false,
            searching: false,
            //paging: false
        });
    });
    
</script>
